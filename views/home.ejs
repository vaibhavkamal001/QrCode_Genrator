<% layout('boilerplate') %>
    <div class="card col-md-5">
        <h5 class="card-header">Personal_Information</h5>
        <div class="card-body">
            <h5 class="card-title"></h5>
            <form class="row needs-validation" method="POST" action="/details" novalidate>
                <div class="card-body">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="data[name]" required>
                </div>
                <div class="card-body">
                    <label for="address" class="form-label">Address</label>
                    <input type="text" class="form-control" id="address" placeholder="1234 Main St" name="data[address]"
                        required>
                </div>
                <div class="card-body">
                    <label for="city" class="form-label">City</label>
                    <input type="text" class="form-control" id="city" name="data[city]" required>
                </div>
                <div class="card-body">
                    <label for="State" class="form-label">State</label>
                    <input type="text" class="form-control" id="State" name="data[state]" required>
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>